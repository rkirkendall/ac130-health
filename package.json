{
  "name": "health-record-mcp",
  "version": "0.11.0",
  "description": "MCP server for managing longitudinal medical records with Docker support, allergies, immunizations, and vital signs tracking",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "default": "./dist/core/index.js"
    },
    "./core/*": {
      "types": "./dist/core/*.d.ts",
      "default": "./dist/core/*.js"
    },
    "./core/*.js": {
      "types": "./dist/core/*.d.ts",
      "default": "./dist/core/*.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "tsx src/index.ts",
    "watch": "tsc --watch",
    "migrate": "tsx scripts/migrate.ts",
    "test": "c8 --reporter=text --reporter=lcov tsx --test $(find src/tests -name '*.test.ts')",
    "test:presidio": "tsx src/presidio-e2e-test.ts",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "medical",
    "health"
  ],
  "author": "",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://us-central1-npm.pkg.dev/ac130-hosted/mcp-npm/"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@types/lodash": "^4.17.20",
    "dotenv": "^16.4.7",
    "lodash": "^4.17.21",
    "mongodb": "^6.11.0",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "c8": "^10.1.3",
    "mongodb-memory-server": "^10.3.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
